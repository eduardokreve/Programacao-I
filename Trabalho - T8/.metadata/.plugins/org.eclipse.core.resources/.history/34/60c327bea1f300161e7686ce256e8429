import java.util.Scanner;


public class PrincipalT8 {
	public static void main(String[] args) {
		int menu;
		
		Scanner text = new Scanner(System.in);
		
		do {
		
			System.out.println("BLOG: O que você quer fazer?\n");
			System.out.println("1 - Novo post de noticia\n" + "2 - Nova resenha de produto");
			System.out.println("3 - Novo post de outros assuntos\n" + "4 - Listar todas as postagens");
			System.out.println("5 - Curtir uma postagem\n" + "6 - Não curtir uma postagem\n" + "10 - Sair");
			System.out.print("Escolha a opção: ");
			menu = text.nextInt();
			
			switch (menu) {
				case 1:
					
					break;
				case 2:
					
					break;
				case 3:
					
					break;
				case 4:
					
					break;
				case 5:
					
					break;
				case 6:
					
					break;
				case 10:
					text.close();
					System.out.println("Deixando o blog...\n");
					System.exit(0);
					break;
					
				default :	
					System.out.println("\n\nValor inserido incorreto!\n\n");		
			}
			
		} while(menu != 10);
	}
}
